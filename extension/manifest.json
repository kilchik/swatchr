{
  "manifest_version": 2,

  "name": "Swatchr extension",
  "description": "This extension will find torrent file and send it to swatchr server",
  "version": "1.0",

  "background": {
    "scripts": ["popup.js"],
    "persistent": true
  },

  "options_page": "options.html",

  "permissions": [
    "tabs", "*://*.rutracker.org/*", "storage"
  ],

  "browser_action": {
    "default_icon": "iron-man_gray.png",
    "default_popup": "popup.html"
  }
}
